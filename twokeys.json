{
  "title": "Two keys for modifiers",
  "rules": [
    {
      "description": "D+F and J+K to CTRL",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "d"
              },
              {
                "key_code": "f"
              }
            ]
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "j"
              },
              {
                "key_code": "k"
              }
            ]
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ]
        }
      ]
    },
    {
      "description": "S+D and K+L to ALT (option)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "s"
              },
              {
                "key_code": "d"
              }
            ]
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "k"
              },
              {
                "key_code": "l"
              }
            ]
          },
          "to": [
            {
              "key_code": "right_option"
            }
          ]
        }
      ]
    },
    {
      "description": "E+F and J+I to SHIFT",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "e"
              },
              {
                "key_code": "f"
              }
            ]
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "j"
              },
              {
                "key_code": "i"
              }
            ]
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ]
        }
      ]
    },
    {
      "description": "D+V to TAB",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "d"
              },
              {
                "key_code": "v"
              }
            ]
          },
          "to": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
    {
      "description": "K+N to ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "k"
              },
              {
                "key_code": "n"
              }
            ]
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "H+J to DELETE",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "optional": "any"
            },
            "simultaneous": [
              {
                "key_code": "h"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    } 
  ]
}